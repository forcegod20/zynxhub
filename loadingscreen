        buttonShadow.Position = UDim2.new(0, -1, 0, 1)
    end)

    discordButton.MouseLeave:Connect(function()
        discordButton.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
        buttonHighlight.BackgroundTransparency = 0.3
        -- Reset 3D effect
